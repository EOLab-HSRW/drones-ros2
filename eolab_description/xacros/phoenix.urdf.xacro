<robot name="phoenix" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="root_frame" value="base_link"/>

  <xacro:include filename="$(find eolab_description)/macros/core_sensors.xacro"/>

  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <link name="${root_frame}">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
    </collision>
    <xacro:box_inertia m="2" w="0.3" h="0.3" d="0.3"/>
  </link>

  <xacro:core_sensors link="${root_frame}"/>

  <xacro:macro name="phoenix_rotor" params="number parent direction *origin">
    <link name="rotor_${number}">
      <visual>
        <geometry>
          <box size="0.4 0.04 0.01"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <box size="0.4 0.04 0.01"/>
        </geometry>
      </collision>
      <xacro:box_inertia m="0.1" w="0.4" h="0.04" d="0.01"/>
    </link>
    <joint name="rotor_${number}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="rotor_${number}"/>
      <xacro:insert_block name="origin" />
      <axis xyz="0 0 1"/>
    </joint>
    <gazebo>
      <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
        <jointName>rotor_${number}_joint</jointName>
        <linkName>rotor_${number}</linkName>
        <turningDirection>${direction}</turningDirection>
        <timeConstantUp>0.0125</timeConstantUp>
        <timeConstantDown>0.025</timeConstantDown>
        <maxRotVelocity>1000.0</maxRotVelocity>
        <motorConstant>8.54858e-06</motorConstant>
        <momentConstant>0.016</momentConstant>
        <commandSubTopic>command/motor_speed</commandSubTopic>
        <motorNumber>${number}</motorNumber>
        <rotorDragCoefficient>8.06428e-05</rotorDragCoefficient>
        <rollingMomentCoefficient>1e-06</rollingMomentCoefficient>
        <rotorVelocitySlowdownSim>10</rotorVelocitySlowdownSim>
        <motorType>velocity</motorType>
      </plugin>
    </gazebo>
  </xacro:macro>

  <xacro:phoenix_rotor number="0" parent="${root_frame}" direction="cw">
    <origin xyz="0.58 0 0.4" rpy="0 0 0"/>
  </xacro:phoenix_rotor>

  <xacro:phoenix_rotor number="1" parent="${root_frame}" direction="ccw">
    <origin xyz="-0.58 0 0.4" rpy="0 0 0"/>
  </xacro:phoenix_rotor>

  <xacro:phoenix_rotor number="2" parent="${root_frame}" direction="cw">
    <origin xyz="-0.29 -0.51 0.4" rpy="0 0 0"/>
  </xacro:phoenix_rotor>

  <xacro:phoenix_rotor number="3" parent="${root_frame}" direction="ccw">
    <origin xyz="0.29 0.51 0.4" rpy="0 0 0"/>
  </xacro:phoenix_rotor>

  <xacro:phoenix_rotor number="4" parent="${root_frame}" direction="ccw">
    <origin xyz="0.29 -0.51 0.4" rpy="0 0 0"/>
  </xacro:phoenix_rotor>

  <xacro:phoenix_rotor number="5" parent="${root_frame}" direction="cw">
    <origin xyz="-0.29 0.51 0.4" rpy="0 0 0"/>
  </xacro:phoenix_rotor>

</robot>
